<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nomeFantasia"
        android:textColor="@color/cinza_escuro"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="TITULO"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tipoUnidade"
        android:layout_below="@id/nomeFantasia"
        android:textColor="@color/cinza_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="SUBTITULO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/nomeFantasia"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nomeFantasia"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/classificacao"
        android:textColor="@color/cinza_3"
        android:text="3,5"
        android:layout_marginRight="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/distancia"
        app:layout_constraintTop_toTopOf="@+id/distancia"
        android:layout_marginBottom="0dp"/>

    <RatingBar
        android:id="@+id/classificacao"
        style="?android:attr/ratingBarStyleSmall"
        android:rating="1"
        android:numStars="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/distancia"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/distancia"
        app:layout_constraintTop_toTopOf="@+id/distancia"/>

    <TextView
        android:id="@+id/distancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cinza_3"
        tools:text="25km"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tipoUnidade"/>

</android.support.constraint.ConstraintLayout>