<resources>

    <style name="CloseButtonAsUpIndicator" parent="Base">
        <item name="android:homeAsUpIndicator">@drawable/ic_close</item>
    </style>

    <style name="WhiteStatusBar" parent="Base">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TransparentStatusBar" parent="Base">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="NoActionBar" parent="Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="android:windowBackground">@color/pure_white</item>
    </style>

    <!-- Widgets: -->

    <style name="ExpandedTitulo" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">26sp</item>
        <!--<item name="android:textColor">@color/colorPrimary</item>-->
    </style>

    <style name="Separador">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#f4f4f4</item>
    </style>

</resources>
